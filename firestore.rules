
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Core user isolation rule
    match /users/{userId} {
      // Allow access to the user profile itself
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow recursive access to all subcollections (vaults, transactions, etc.)
      match /{allSubcollections=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Safety fallback for any unintended top-level collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
